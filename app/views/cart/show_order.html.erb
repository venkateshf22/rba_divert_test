<h2>Cart Items</h2>
<table>
<%@order.carts.each do |cart_item|%>
    <tr>
    <td><%=cart_item.menu.title%></td>
    <td><%=cart_item.menu.image%></td>
    <td><%=cart_item.menu.description%></td>
    </tr>
  <%end%>
</table>